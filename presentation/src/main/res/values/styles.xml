<resources>

    <style name="Meeckets.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/meecketsGray</item>
        <item name="colorPrimaryDark">@color/meecketsGrayDark</item>
        <item name="colorAccent">@color/meecketsYellow</item>

        <item name="android:buttonStyle">@style/Meeckets.Base.Button</item>
        <item name="colorButtonNormal">@color/meecketsGrayLight</item>

        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Meeckets.Theme.Dark" parent="Meeckets.Theme">
        <item name="android:navigationBarColor">@color/meecketsGray</item>
        <item name="android:statusBarColor">@color/meecketsGray</item>
        <item name="android:windowBackground">@color/meecketsGray</item>
    </style>

    <style name="Meeckets.Base.Activity" parent="">
        <item name="android:layout_margin">@dimen/base_activity_margin</item>
    </style>

    <style name="Meeckets.Base.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/base_toolbar_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Meeckets.Base.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/meecketsGray</item>
    </style>

    <style name="Meeckets.Base.AuthText" parent="">
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
    </style>

    <style name="Meeckets.Widget.AuthMessage" parent="Meeckets.Base.AuthText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/meecketsRed</item>
        <item name="android:textSize">@dimen/base_text_micro</item>
    </style>

    <style name="Meeckets.Widget.AuthEditText" parent="Meeckets.Base.AuthText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/meecketsWhiteSaver</item>
        <item name="android:textSize">@dimen/base_text</item>
    </style>

    <style name="Meeckets.Widget.DateTextLight" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_text_mini</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Meeckets.Widget.DateText" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/meecketsGrayLight</item>
        <item name="android:textSize">@dimen/base_text_mini</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Meeckets.Widget.TitleTextLight" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_text_large</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Meeckets.Widget.PlaceTextLight" parent="">
        <item name="android:fontFamily">@font/nunito_bold_italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_text_mini</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Meeckets.Widget.DistanceTextLight" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/meecketsYellow</item>
        <item name="android:textSize">@dimen/base_text_mini</item>
        <item name="android:drawableStart">@drawable/ic_near_me_black_24dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:drawablePadding">@dimen/base_margin_mini</item>
    </style>

    <style name="Meeckets.Widget.ProfileUserText" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/meecketsGrayLight</item>
        <item name="android:textSize">@dimen/base_text_large</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
