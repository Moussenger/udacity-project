<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tournament_item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/base_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_subscription_name_text"
                style="@style/Meeckets.Widget.TitleTextLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                tools:text="SmallWorld" />

            <TextView
                android:id="@+id/widget_subscription_place_text"
                style="@style/Meeckets.Widget.PlaceTextLight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="at Dr Panush in A CoruÃ±a" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_subscription_date_text"
            style="@style/Meeckets.Widget.DateTextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/base_margin"
            tools:text="4 days left" />

    </LinearLayout>

</FrameLayout>